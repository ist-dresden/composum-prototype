<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
        jcr:primaryType="sling:Folder">
    <jcr:content
            jcr:primaryType="nt:unstructured"
            jcr:title="Assets Example 3"
            jcr:mixinTypes="[mix:versionable,mix:created,mix:lastModified]">
        <templates
                jcr:primaryType="nt:unstructured">
            <image
                    jcr:primaryType="nt:unstructured"
                    picture="/content/composum/prototype/assets/demo/templates/image/picture.html">
            </image>
        </templates>
        <assetconfig
                jcr:primaryType="cpa:AssetConfiguration"
                sling:resourceType="composum/assets/config"
                jcr:title="Configuration Example #3"
                example_image_path="/content/composum/prototype/assets/demo/site-3/images/image-01.jpg"
                file_jpg_quality="82.5"
                watermark_text="(c) Wikimedia Commons"
                watermark_font_family="sans-serif"
                watermark_font_size="24"
                watermark_vertical="0.96"
                watermark_horizontal="0.96"
                watermark_color="#ffffff"
                watermark_alpha="0.3">
            <blurred
                    jcr:primaryType="cpa:VariationConfig"
                    sling:resourceType="composum/assets/manager/config/variation"
                    transformation_blur_factor="9">
                <small
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size_width="320"
                        watermark_font_size="18"
                        watermark_horizontal="-15"/>
                <medium
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        category="[default]"
                        size_width="800"/>
                <large
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size_width="1600"/>
            </blurred>
            <normal
                    jcr:primaryType="cpa:VariationConfig"
                    sling:resourceType="composum/assets/manager/config/variation"
                    category="[default]">
                <thumbnail
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size_aspectRatio="1:1"
                        size_width="128"
                        watermark_text="none"/>
                <small
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size_width="600"
                        watermark_font_size="18"
                        watermark_horizontal="-15"/>
                <medium
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        category="[default]"
                        size_width="1024"/>
                <large
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size_width="1600"/>
            </normal>
            <square
                    jcr:primaryType="cpa:VariationConfig"
                    sling:resourceType="composum/assets/manager/config/variation"
                    size_aspectRatio="1:1"
                    watermark_horizontal="-10">
                <thumbnail
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        category="[icon]"
                        size_width="128"
                        watermark_text="none"/>
                <small
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        category="[mobile,default]"
                        size_width="480"
                        watermark_font_size="12"/>
                <medium
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        category="[tablet]"
                        size_width="640"
                        watermark_font_size="18"/>
                <large
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size_width="800"/>
            </square>
            <thumbnail
                    jcr:primaryType="cpa:VariationConfig"
                    sling:resourceType="composum/assets/manager/config/variation"
                    watermark_text="none">
                <small
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size_width="32"/>
                <medium
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        category="[default]"
                        size_width="128"/>
                <large
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size_width="512"/>
            </thumbnail>
            <wide
                    jcr:primaryType="cpa:VariationConfig"
                    sling:resourceType="composum/assets/manager/config/variation"
                    size_aspectRatio="3:1">
                <thumbnail
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size_aspectRatio="1:1"
                        size_width="128"
                        watermark_text="none"/>
                <small
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size_width="640"/>
                <medium
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        category="[default]"
                        size_width="1024"/>
                <large
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size_width="2400"/>
            </wide>
        </assetconfig>
    </jcr:content>
</jcr:root>

<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="composum/prototype/assets/demo/page">
    <jcr:content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/prototype/assets/demo/page/container">
        <text-00
                jcr:primaryType="nt:unstructured"
                sling:resourceType="composum/prototype/assets/demo/text"
                text="&lt;p>a source set with various image renditions depending on the current screen resolution...&lt;/p>&lt;p>Change the browsers width and see the image component in action!&lt;/p>"
                title="Adaptive Picture"/>
        <image-00
                jcr:primaryType="nt:unstructured"
                sling:resourceType="composum/assets/commons/components/image/adaptive"
                asset="/content/composum/prototype/assets/demo/site-3/images/image-03.jpg"/>
        <code-00
                jcr:primaryType="nt:unstructured"
                sling:resourceType="composum/prototype/assets/demo/code"
                jcr:title="Picture Tag Template"
                codeRef="/content/composum/prototype/assets/demo/templates/image/picture.html"
                language="html" showLanguage="{Boolean}true"
                bordered="{Boolean}true" collapsible="{Boolean}true"/>
        <code-01
                jcr:primaryType="nt:unstructured"
                sling:resourceType="composum/prototype/assets/demo/code"
                title="Adaptive Image Component - JSP template"
                codeRef="/libs/composum/assets/commons/components/image/adaptive/adaptive.jsp"
                language="jsp" showLanguage="{Boolean}true"
                bordered="{Boolean}true" collapsible="{Boolean}true" collapsed="{Boolean}true"/>
        <code-02
                jcr:primaryType="nt:unstructured"
                sling:resourceType="composum/prototype/assets/demo/code"
                title="Live HTML snippet rendered by the Adaptive Image Component"
                codeUrl="/content/composum/prototype/assets/demo/site-3/pages/image-03a/jcr:content/image-00.html"
                language="html" showLanguage="{Boolean}true"
                bordered="{Boolean}true" collapsible="{Boolean}true" collapsed="{Boolean}true"/>
        <code-03
                jcr:primaryType="nt:unstructured"
                sling:resourceType="composum/prototype/assets/demo/code"
                title="Live XML export of this page from the local Sling repository"
                codeUrl="/bin/cpm/nodes/source.xml/content/composum/prototype/assets/demo/site-3/pages/image-03a"
                language="xml" showLanguage="{Boolean}true"
                bordered="{Boolean}true" collapsible="{Boolean}true" collapsed="{Boolean}true"/>
    </jcr:content>
</jcr:root>

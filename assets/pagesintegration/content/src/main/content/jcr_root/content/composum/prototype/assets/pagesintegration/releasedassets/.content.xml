<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cpa="http://sling.composum.com/assets/1.0"
        xmlns:jcr="http://www.jcp.org/jcr/1.0"
        xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
        jcr:primaryType="sling:Folder">
    <jcr:content
            jcr:primaryType="nt:unstructured"
            jcr:mixinTypes="[mix:versionable]"
            jcr:title="Pageintegration Assets Configuration">
        <assetconfig
                jcr:primaryType="cpa:AssetConfiguration"
                sling:resourceType="composum/assets/config"
                example.image.path="/content/composum/prototype/assets/pagesintegration/releasedassets/testbild.png"
                file.png.quality="82.5">
            <bar
                    jcr:primaryType="cpa:VariationConfig"
                    sling:resourceType="composum/assets/config/variation"
                    crop.horizontal="0"
                    crop.vertical="0"
                    size.aspectRatio="5:1">
                <small
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/config/rendition"
                        category="[default]"
                        crop.horizontal="0.5"
                        crop.scale="1.0"
                        crop.vertical="0.5"
                        size.width="640"/>
                <medium
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/config/rendition"
                        category="[default]"
                        size.width="1024"/>
                <large
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/config/rendition"
                        size.width="1920"
                        transformation.blur.factor="default"/>
            </bar>
            <thumbnail
                    jcr:primaryType="cpa:VariationConfig"
                    sling:resourceType="composum/assets/config/variation">
                <small
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/config/rendition"
                        size.width="32"/>
                <medium
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/config/rendition"
                        category="[default]"
                        size.width="128"/>
                <large
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/config/rendition"
                        size.width="512"/>
            </thumbnail>
            <wide
                    jcr:primaryType="cpa:VariationConfig"
                    sling:resourceType="composum/assets/config/variation"
                    category="[default]"
                    size.aspectRatio="16:9">
                <small
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/config/rendition"
                        size.width="640"/>
                <medium
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/config/rendition"
                        size.width="1024"/>
                <thumbnail
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/config/rendition"
                        category="[default,icon]"
                        size.aspectRatio="1:1"
                        size.width="128"/>
                <large
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/config/rendition"
                        size.width="1920"/>
            </wide>
            <vertical
                    jcr:primaryType="cpa:VariationConfig"
                    sling:resourceType="composum/assets/config/variation"
                    size.aspectRatio="1:5">
                <no-scale
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/config/rendition"
                        crop.scale="0"
                        size.height="400"/>
                <no-explicit-crop
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/config/rendition"
                        size.height="400"/>
                <target-scale
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/config/rendition"
                        category="[default]"
                        crop.scale="0.8"
                        crop.vertical="0.7"
                        size.height="400"/>
                <half-scale
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/config/rendition"
                        category="[default]"
                        crop.horizontal="0.6"
                        crop.scale="0.5"
                        crop.vertical="0.5"
                        size.height="400"/>
            </vertical>
        </assetconfig>
    </jcr:content>
</jcr:root>

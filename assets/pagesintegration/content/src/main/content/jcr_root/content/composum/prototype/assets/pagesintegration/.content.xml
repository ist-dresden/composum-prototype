<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cpl="http://sling.composum.com/platform/1.0"
          xmlns:cpp="http://sling.composum.com/pages/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="cpp:Site">
    <jcr:content
            jcr:primaryType="cpp:SiteConfiguration"
            cpl:last-publicMode="versions"
            jcr:description="This site is for testing the integration of Composum Assets into Composum Pages, and also serves as an example how this can be done."
            jcr:title="Testsite for integration of Assets into Composum Pages"
            sling:resourceType="composum/pages/stage/edit/site"
            template="/libs/composum/pages/components/templates/site/test">
        <style
                jcr:primaryType="nt:unstructured"
                category.edit="composum.pages.components.edit"
                category.view="composum.pages.components.view"/>
        <logo
                jcr:primaryType="nt:unstructured"
                sling:resourceType="composum/pages/components/element/image"
                imageRef="/content/shared/composum/pages/components/assets/logo/Composum-color.svg"/>
        <thumbnail
                jcr:primaryType="nt:unstructured">
            <image
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="composum/pages/components/element/image"
                    imageRef="/content/shared/composum/pages/components/assets/thumbnail/site/blank-lt-gr.png"/>
        </thumbnail>
        <languages
                jcr:primaryType="nt:unstructured">
            <english
                    jcr:primaryType="nt:unstructured"
                    key="en"
                    label="english"/>
            <german
                    jcr:primaryType="nt:unstructured"
                    key="de"
                    label="deutsch"/>
            <spanish
                    jcr:primaryType="nt:unstructured"
                    key="es"
                    label="español"/>
            <french
                    jcr:primaryType="nt:unstructured"
                    key="fr"
                    label="français"/>
            <greek
                    jcr:primaryType="nt:unstructured"
                    key="el"
                    label="ελληνικά"/>
            <hebrew
                    jcr:primaryType="nt:unstructured"
                    direction="rtl"
                    key="he"
                    label="עִבְרִית"/>
            <arabic
                    jcr:primaryType="nt:unstructured"
                    direction="rtl"
                    key="ar"
                    label="العربية"/>
            <chinese
                    jcr:primaryType="nt:unstructured"
                    key="zh"
                    label="普通话"/>
        </languages>
    </jcr:content>
    <home/>
    <meta/>
    <assets/>
</jcr:root>

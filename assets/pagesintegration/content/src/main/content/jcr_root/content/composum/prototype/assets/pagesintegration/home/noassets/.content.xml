<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cpp="http://sling.composum.com/pages/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="cpp:Page">
    <jcr:content
            jcr:primaryType="cpp:PageContent"
            jcr:description="This page demonstrates that picures and videos can be JCR-versioned and used with pages without using the Assets module."
            jcr:title="Versioning without Assets"
            sling:resourceType="composum/pages/components/page"
            template="/libs/composum/pages/components/templates/page/content">
        <main
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/parsys">
            <row
                    jcr:primaryType="cpp:Container"
                    sling:resourceType="composum/pages/components/container/row"
                    columns="-12-"
                    path="">
                <column-0
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/column">
                    <textimage
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/textimage"
                            imagePosition="right"
                            path=""
                            text="&lt;p>This page demonstrates that picures and videos can be JCR-versioned and used with pages without using the Assets module. The image and video used in this page got a mix:versionable mixin, and can be activated and published together with the pages, without using the Composum Assets module.&lt;/p>">
                        <image
                                jcr:primaryType="nt:unstructured"
                                imageRef="/content/composum/prototype/assets/pagesintegration/assets/background/gravitational_waves.jpg"/>
                    </textimage>
                    <video
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/video"
                            autoplay="{Boolean}true"
                            controls="{Boolean}true"
                            copyright="Pixabay"
                            license="Simplified Pixabay License"
                            licenseUrl="https://pixabay.com/service/license/"
                            loop="{Boolean}true"
                            muted="{Boolean}true"
                            path=""
                            videoRef="/content/composum/prototype/assets/pagesintegration/assets/pixabay/Nebula-6044.mp4"/>
                </column-0>
            </row>
        </main>
        <bottom
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/iparsys"/>
        <top
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/parsys">
            <title
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/element/title"
                    path=""
                    title="Versioning without the Assets module">
                <image
                        jcr:primaryType="nt:unstructured"
                        imageRef="/content/composum/prototype/assets/pagesintegration/assets/background/gravitational_waves.jpg"/>
            </title>
        </top>
    </jcr:content>
</jcr:root>

<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
        jcr:primaryType="sling:Folder">
    <jcr:content
            jcr:primaryType="nt:unstructured"
            jcr:title="Assets Example 3">
        <templates
                jcr:primaryType="nt:unstructured">
            <image
                    jcr:primaryType="nt:unstructured"
                    picture="/content/prototype/composum/assets/templates/image/picture.html">
            </image>
        </templates>
        <assetconfig
                jcr:primaryType="cpa:AssetConfiguration"
                sling:resourceType="composum/assets/manager/config"
                example.image.path="/content/prototype/composum/assets/site-3/images/image-01.jpg"
                file.jpg.quality="82.5"
                watermark.text="(c) Wikimedia Commons"
                watermark.font.family="sans-serif"
                watermark.font.size="24"
                watermark.vertical="0.96"
                watermark.horizontal="0.96"
                watermark.color="#ffffff"
                watermark.alpha="0.3">
            <blurred
                    jcr:primaryType="cpa:VariationConfig"
                    sling:resourceType="composum/assets/manager/config/variation"
                    transformation.blur.factor="9">
                <small
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size.width="320"
                        watermark.font.size="18"
                        watermark.horizontal="-15"/>
                <medium
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        categories="[default]"
                        size.width="800"/>
                <large
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size.width="1600"/>
            </blurred>
            <normal
                    jcr:primaryType="cpa:VariationConfig"
                    sling:resourceType="composum/assets/manager/config/variation"
                    categories="[default]">
                <thumbnail
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size.aspectRatio="1:1"
                        size.width="128"
                        watermark.text=""/>
                <small
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size.width="600"
                        watermark.font.size="18"
                        watermark.horizontal="-15"/>
                <medium
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        categories="[default]"
                        size.width="1024"/>
                <large
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size.width="1600"/>
            </normal>
            <square
                    jcr:primaryType="cpa:VariationConfig"
                    sling:resourceType="composum/assets/manager/config/variation"
                    size.aspectRatio="1:1"
                    watermark.horizontal="-10">
                <thumbnail
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        categories="[icon]"
                        size.width="128"
                        watermark.text=""/>
                <small
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        categories="[mobile,default]"
                        size.width="480"
                        watermark.font.size="12"/>
                <medium
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        categories="[tablet]"
                        size.width="640"
                        watermark.font.size="18"/>
                <large
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size.width="800"/>
            </square>
            <thumbnail
                    jcr:primaryType="cpa:VariationConfig"
                    sling:resourceType="composum/assets/manager/config/variation"
                    watermark.text="">
                <small
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size.width="32"/>
                <medium
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        categories="[default]"
                        size.width="128"/>
                <large
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size.width="512"/>
            </thumbnail>
            <wide
                    jcr:primaryType="cpa:VariationConfig"
                    sling:resourceType="composum/assets/manager/config/variation"
                    size.aspectRatio="3:1">
                <thumbnail
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size.aspectRatio="1:1"
                        size.width="128"
                        watermark.text=""/>
                <small
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size.width="640"/>
                <medium
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        categories="[default]"
                        size.width="1024"/>
                <large
                        jcr:primaryType="cpa:RenditionConfig"
                        sling:resourceType="composum/assets/manager/config/rendition"
                        size.width="2400"/>
            </wide>
        </assetconfig>
    </jcr:content>
</jcr:root>

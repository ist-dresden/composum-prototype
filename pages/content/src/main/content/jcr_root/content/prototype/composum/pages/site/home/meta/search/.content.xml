<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cpp="http://sling.composum.com/pages/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="cpp:Page">
    <jcr:content
            jcr:primaryType="cpp:PageContent"
            jcr:title="Composum - Search page"
            sling:resourceType="composum/pages/components/page">
        <search
                jcr:primaryType="nt:unstructured"
                ignoreInSearch="{Boolean}true"/>
        <navigation
                jcr:primaryType="nt:unstructured"
                hideInNav="{Boolean}true"
                title="Composum Search Page"/>
        <top
                jcr:primaryType="nt:unstructured"
                sling:resourceType="composum/pages/components/container/parsys">
            <title
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="composum/pages/components/element/title"
                    title="Composum Search">
                <image
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="composum/pages/components/element/image"
                        imageRef="/content/shared/composum/pages/assets/background/apres_midi_dun_faune.jpg">
                    <i18n
                            jcr:primaryType="nt:unstructured">
                        <de
                                jcr:primaryType="nt:unstructured"
                                imageRef="/content/shared/composum/pages/assets/background/apres_midi_dun_faune.jpg"/>
                    </i18n>
                </image>
                <i18n
                        jcr:primaryType="nt:unstructured">
                    <de
                            jcr:primaryType="nt:unstructured"
                            title="Composum Suche"/>
                </i18n>
            </title>
        </top>
        <main
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/parsys">
            <row
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/container/row"
                    cells="-12-">
                <column-0
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/cell">
                    <searchfield
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="composum/pages/components/search/field"
                            buttonSymbol="eye"
                            placeholderText="Please enter all search terms. You can use &quot; to quote phrases and the prefix - to forbid words."/>
                    <searchresult
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="composum/pages/components/search/result"
                            headline="&lt;p>&lt;strong>Search results for &quot;{0}&quot;&lt;/strong>&lt;/p>"
                            pagesize="4"
                            searchRoot="home"
                            searchtermErrorText="&lt;p>There was an error when trying to search for the search terms. Please give a sequence of words. If you want only pages not containing a word, start the word with a minus (-). If you want some words to appear in sequence, please surround the sequence with double quotes (&quot;).&lt;/p>"
                            template="composum/pages/components/search/defaulttemplate">
                        <i18n
                                jcr:primaryType="nt:unstructured">
                            <de
                                    jcr:primaryType="nt:unstructured"
                                    headline="&lt;p>&lt;strong>Suchergebnisse fÃ¼r &quot;{0}&quot;&lt;/strong>&lt;/p>"/>
                        </i18n>
                    </searchresult>
                </column-0>
                <column-1
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/cell"/>
            </row>
        </main>
    </jcr:content>
</jcr:root>

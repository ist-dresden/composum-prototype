<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
        jcr:primaryType="cpp:Site">
    <jcr:content
            jcr:primaryType="cpp:SiteConfiguration"
            jcr:title="A Simple Site"
            jcr:description="A simple site template with only one page type."
            sling:resourceType="composum/pages/stage/edit/site"
            allowedChildTemplates="[
                ^(.*/)?composum/prototype/pages/simple/templates/page$
            ]">
        <style
                jcr:primaryType="nt:unstructured"
                category.edit="composum.prototype.pages.simple.edit"
                category.view="composum.prototype.pages.simple.view"/>
        <languages
                jcr:primaryType="nt:unstructured"
                sling:resourceType="composum/pages/stage/edit/site/languages">
            <english
                    jcr:primaryType="nt:unstructured"
                    key="en" label="english"/>
        </languages>
    </jcr:content>
</jcr:root>

                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/parsys">
            <row
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/container/row"
                    columns="-12-">
                <column-0
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/column">
                    <textimage-01
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/textimage"
                            imagePosition="top"
                            text="&lt;p>This page contains HTL versions of the search field and search results.&lt;/p>"
                            textAlignment="left"
                            title="HTL Search Component Demo">
                        <image
                                jcr:primaryType="nt:unstructured"/>
                    </textimage-01>
                    <!--<searchfield-->
                    <!--jcr:primaryType="nt:unstructured"-->
                    <!--sling:resourceType="composum/pages/components/search/field"-->
                    <!--buttonImage=""-->
                    <!--buttonText=""-->
                    <!--buttonSymbol="fa fa-search"-->
                    <!--placeholderText="Please enter the search terms."-->
                    <!--searchResultPath="/content/prototype/composum/pages/site/demo/page/htlcomponents"/>-->
                    <!--<searchresult-->
                    <!--jcr:primaryType="nt:unstructured"-->
                    <!--sling:resourceType="composum/pages/components/search/result"-->
                    <!--template="composum/pages/components/search/defaulttemplate"-->
                    <!--pagesize="4"-->
                    <!--searchRoot="{Path}/content"/>-->
                    <htlsearchfield
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="composum/prototype/pages/demo/htl/search/field"
                            buttonImage=""
                            buttonText=""
                            buttonSymbol="fa fa-search"
                            placeholderText="(HTL) : Please enter the search terms."
                            searchResultPath="/content/prototype/composum/pages/site/demo/page/htlcomponents"/>
                    <htlsearchresult
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="composum/prototype/pages/demo/htl/search/result"
                            template="composum/prototype/pages/demo/htl/search/defaulttemplate"
                            pagesize="4" headFormatted="Search result presented via HTL"
                            searchRoot="{Path}/content"/>
                </column-0>
            </row>
        </main>
    </jcr:content>
</jcr:root>

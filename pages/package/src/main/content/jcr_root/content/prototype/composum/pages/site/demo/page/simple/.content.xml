<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
        jcr:primaryType="cpp:Page">
    <jcr:content
            jcr:primaryType="cpp:PageContent"
            jcr:title="Hello World!"
            sling:resourceType="composum/prototype/pages/demo/page/simple">
         <main
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/parsys">
              <row
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/container/row"
                    columns="-12-">
                <column-0
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/column">
                    <textimage-01
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/textimage"
                            imagePosition="top"
                            text="&lt;p>The Composum Platform is a Web application platform based on the Apache Sling framework. The platform support content management, asset management and fast application development.&lt;/p>"
                            textAlignment="left"
                            title="Hello World!">
                        <image
                                jcr:primaryType="nt:unstructured"/>
                    </textimage-01>
                </column-0>
            </row>
            <searchfield
                 jcr:primaryType="nt:unstructured"
                 sling:resourceType="composum/pages/components/search/field"
                 buttonImage=""
                 buttonText=""
                 buttonSymbol="fa fa-search"
                 placeholderText="Please enter the search terms."
                 searchResultPath="/content/prototype/composum/pages/site/demo/page/simple"/>
            <searchresult
                 jcr:primaryType="nt:unstructured"
                 sling:resourceType="composum/pages/components/search/result"
                 template="composum/pages/components/search/defaulttemplate"
                 pagesize="4"
                 searchRoot="{Path}/content"/>
        </main>
    </jcr:content>
</jcr:root>
